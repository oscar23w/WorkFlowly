<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editar_tarea">

    <!-- 游댛 Barra superior personalizada -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp"
        android:background="@color/color_principal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleEditarTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar Tarea"
            android:textColor="@color/color_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Cerrar" />
    </LinearLayout>

    <!-- 游댷 Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre de la tarea -->
            <TextView
                android:text="Nombre de la tarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editTextNombreTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. Redactar informe"/>

            <!-- Fecha de vencimiento -->
            <TextView
                android:layout_marginTop="16dp"
                android:text="Fecha de vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextFechaVencimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Ej. 10/06/2025"
                    android:inputType="none" />

                <ImageButton
                    android:id="@+id/buttonSeleccionarFecha"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Seleccionar fecha"
                    android:src="@drawable/calendar"
                    android:scaleType="centerInside"/>

            </LinearLayout>

            <!-- Descripci칩n -->
            <TextView
                android:layout_marginTop="16dp"
                android:text="Descripci칩n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detalles de la tarea"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine"/>

            <!-- A침adir miembro -->
            <TextView
                android:text="A침adir miembro"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteUserSearch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Buscar usuario"
                    android:inputType="text"/>

                <Button
                    android:id="@+id/buttonAddMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A침adir"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/color_principal"
                    android:textColor="@color/color_titulo"/>
            </LinearLayout>

            <!-- Lista de miembros a침adidos -->
            <TextView
                android:text="Miembros asignados"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMiembros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <!-- Bot칩n Guardar Tarea -->
            <Button
                android:id="@+id/btnGuardarTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Tarea"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/color_principal"
                android:textColor="@color/color_titulo"/>

            <Button
                android:id="@+id/btnEliminarTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Tarea"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/color_rojo"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
