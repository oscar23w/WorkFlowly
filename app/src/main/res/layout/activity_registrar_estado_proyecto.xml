<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar_estado_proyecto">

    <!--  Barra superior personalizada -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp"
        android:background="@color/color_principal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- T铆tulo centrado (expandido) -->
        <TextView
            android:id="@+id/tituleNuevoEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nuevo estado"
            android:textColor="@color/color_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Bot贸n de cerrar -->
        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Cancelar" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nombre del estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editTextNombreEstado"
                android:hint="Ingrese nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Descripci贸n"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editTextDescription"
                android:hint="Ingrese descripci贸n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- Buscar y a帽adir miembro -->
            <TextView
                android:text="Selecciona la posici贸n"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/posicion"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Posici贸n" />
            </LinearLayout>



            <Button
                android:id="@+id/Crearestado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Estado"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/color_principal"
                android:textColor="@color/color_titulo" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
